<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RCEditor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RCEditor"
    xmlns:pages="clr-namespace:RCEditor.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="RC-600 Patch Editor">

    <TabBar>
        <Tab Title="Patches" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Tracks" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate pages:TracksPage}" />
        </Tab>
        <Tab Title="Rhythm" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate pages:RhythmPage}" />
        </Tab>
        <Tab Title="Effects" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate pages:EffectsPage}" />
        </Tab>
        <Tab Title="Controls" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ControlsPage}" />
        </Tab>
        <Tab Title="About" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
        </Tab>
    </TabBar>

</Shell>
